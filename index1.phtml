//зададим функцию evenOdd()
function evenOdd($array) {
    $result = [];
    for ($i = 0; $i < count($array); $i++) {
        if ($array[$i] % 2 == 0) {
            $result[] = "четное";
        } else {
            $result[] = "нечетное";
        }
    }
    return $result;
}
$result = evenOdd($array);

//Используем функцию implode чтобы элементы в новом массив объединить в строку.
